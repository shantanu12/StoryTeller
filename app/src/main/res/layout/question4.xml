<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Should the ant help the dove in return?"
        android:id="@+id/textView2"
        android:textSize="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-light"
        android:typeface="sans"
        android:layout_gravity="center"
        android:gravity="center" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="No, it's the dove's problem."
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:typeface="sans"
        android:textStyle="bold"
        android:allowUndo="true"
        android:background="#028482"
        android:textColor="#ffffff"
        android:layout_weight=".10"
        android:textSize="20dp"
        android:layout_marginBottom="30dp" />

        <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="No, wait and watch."
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:typeface="sans"
        android:layout_weight=".10"
        android:textStyle="bold"
        android:allowUndo="true"
        android:background="#7aba7a"
        android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Yes, she should."
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:typeface="sans"
        android:layout_weight=".10"
        android:textStyle="bold"
        android:allowUndo="true"
        android:background="#b76eb8"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>